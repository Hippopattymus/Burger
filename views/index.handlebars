<h1>Burgers</h1>

<h2>Available</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add A Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/api/burgers" method="POST">
      <input type="text" name="burger_name" placeholder="BORGER">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>